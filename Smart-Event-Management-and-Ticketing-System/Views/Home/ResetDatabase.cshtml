@{
    ViewData["Title"] = "Reset Database";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header @(ViewBag.Success == true ? "bg-success" : "bg-danger") text-white">
                <h3 class="mb-0">
                    <i class="fas @(ViewBag.Success == true ? "fa-check-circle" : "fa-exclamation-triangle") me-2"></i>
                    Database Reset
                </h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Success == true)
                {
                    <div class="alert alert-success">
                        <h4><i class="fas fa-check-circle me-2"></i>Success!</h4>
                        <p>@ViewBag.Message</p>
                    </div>

                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Admin Login Credentials</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Email:</dt>
                                <dd class="col-sm-9"><code>@ViewBag.Email</code></dd>

                                <dt class="col-sm-3">Password:</dt>
                                <dd class="col-sm-9"><code>@ViewBag.Password</code></dd>

                                <dt class="col-sm-3">Status:</dt>
                                <dd class="col-sm-9">
                                    <span class="badge bg-info">Plain text password (for coursework)</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <h6><i class="fas fa-info-circle me-2"></i>What was done:</h6>
                        <ul class="mb-0">
                            <li>? All reviews deleted</li>
                            <li>? All bookings deleted</li>
                            <li>? All inquiries deleted</li>
                            <li>? All members deleted</li>
                            <li>? Admin user created</li>
                        </ul>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login as Admin
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-danger">
                        <h4><i class="fas fa-exclamation-circle me-2"></i>Error!</h4>
                        <p>@ViewBag.Message</p>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

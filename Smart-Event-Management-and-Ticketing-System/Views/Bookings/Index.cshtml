@model List<Smart_Event_Management_and_Ticketing_System.Models.Booking>
@{
    ViewData["Title"] = "My Bookings";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2>
            <i class="fas fa-ticket-alt me-2"></i>My Bookings
        </h2>
        <p class="text-muted">View and manage your event bookings</p>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var booking in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-ticket-alt me-2"></i>Booking #@booking.BookingId
                        </h5>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@booking.Event?.EventName</h5>
                        <p class="card-text">
                            <strong><i class="fas fa-calendar me-2"></i>Event Date:</strong><br />
                            @booking.Event?.EventDate.ToString("MMM dd, yyyy - hh:mm tt")<br />
                            
                            <strong><i class="fas fa-map-marker-alt me-2"></i>Venue:</strong><br />
                            @booking.Event?.Venue<br />
                            
                            <strong><i class="fas fa-chair me-2"></i>Seat Type:</strong><br />
                            <span class="badge bg-primary">@booking.SeatType</span><br />
                            
                            <strong><i class="fas fa-users me-2"></i>Quantity:</strong><br />
                            @booking.Quantity ticket(s)<br />
                            
                            <strong><i class="fas fa-clock me-2"></i>Booked On:</strong><br />
                            @booking.BookingDate.ToString("MMM dd, yyyy")
                        </p>
                    </div>
                    <div class="card-footer bg-white">
                        <div class="d-grid gap-2">
                            <a asp-action="Details" asp-route-id="@booking.BookingId" class="btn btn-primary">
                                <i class="fas fa-info-circle me-2"></i>View Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@booking.BookingId" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Cancel Booking
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        You don't have any bookings yet. 
        <a asp-controller="Events" asp-action="Index" class="alert-link">Browse events</a> to make your first booking!
    </div>
}

@model Smart_Event_Management_and_Ticketing_System.Models.Booking
@{
    ViewData["Title"] = "Book Tickets";
    var eventItem = ViewBag.Event as Smart_Event_Management_and_Ticketing_System.Models.Event;
}

<div class="row mb-4">
    <div class="col-md-12">
        <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.EventId" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Event
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0">
                    <i class="fas fa-ticket-alt me-2"></i>Book Tickets
                </h3>
            </div>
            <div class="card-body">
                <!-- Event Information -->
                <div class="alert alert-info">
                    <h5>
                        <i class="fas fa-calendar-alt me-2"></i>@eventItem.EventName
                    </h5>
                    <p class="mb-0">
                        <strong>Date:</strong> @eventItem.EventDate.ToString("dddd, MMMM dd, yyyy - hh:mm tt")<br />
                        <strong>Venue:</strong> @eventItem.Venue<br />
                        <strong>Price per Ticket:</strong> @eventItem.Price.ToString("C")<br />
                        <strong>Available Seats:</strong> <span class="badge bg-success">@ViewBag.AvailableSeats</span>
                    </p>
                </div>

                <!-- Booking Form -->
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="EventId" />

                    <div class="form-group mb-3">
                        <label asp-for="SeatType" class="form-label">
                            <i class="fas fa-chair me-1"></i>Seat Type
                        </label>
                        <select asp-for="SeatType" class="form-control">
                            <option value="Standard">Standard - @eventItem.Price.ToString("C")</option>
                            <option value="VIP">VIP - @((eventItem.Price * 1.5m).ToString("C"))</option>
                        </select>
                        <span asp-validation-for="SeatType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Quantity" class="form-label">
                            <i class="fas fa-users me-1"></i>Number of Tickets
                        </label>
                        <input asp-for="Quantity" type="number" class="form-control" min="1" max="@Math.Min(10, ViewBag.AvailableSeats)" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                        <small class="form-text text-muted">Maximum 10 tickets per booking</small>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Note:</strong> Please review your booking details carefully before confirming.
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check-circle me-2"></i>Confirm Booking
                        </button>
                        <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.EventId" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Smart_Event_Management_and_Ticketing_System.Models.Review
@{
    ViewData["Title"] = "Delete Review";
}

<div class="row mb-4">
    <div class="col-md-12">
        <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Event
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Review
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5>
                        <i class="fas fa-exclamation-circle me-2"></i>Are you sure you want to delete your review?
                    </h5>
                    <p class="mb-0">
                        This action will permanently delete your review for this event. 
                        This action <strong>cannot be undone</strong>.
                    </p>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Review Details</h5>
                    </div>
                    <div class="card-body">
                        <h6><i class="fas fa-calendar-alt me-2 text-primary"></i>Event</h6>
                        <p><strong>@Model.Event?.EventName</strong></p>

                        <h6><i class="fas fa-user me-2 text-primary"></i>Reviewer</h6>
                        <p>@Model.Member?.FullName</p>

                        <h6><i class="fas fa-star me-2 text-warning"></i>Your Rating</h6>
                        <p>
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Rating)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-warning"></i>
                                }
                            }
                            <span class="ms-2">(@Model.Rating out of 5)</span>
                        </p>

                        <h6><i class="fas fa-comment me-2 text-primary"></i>Your Comment</h6>
                        <p class="card-text border rounded p-3 bg-light">@Model.Comment</p>

                        <h6><i class="fas fa-clock me-2 text-muted"></i>Submitted On</h6>
                        <p class="text-muted">@Model.ReviewDate.ToString("MMMM dd, yyyy")</p>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ReviewId" />
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash-alt me-2"></i>Yes, Delete My Review
                        </button>
                        <a asp-controller="Events" asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>No, Keep My Review
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

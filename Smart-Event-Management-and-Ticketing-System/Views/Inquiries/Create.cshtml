@model Smart_Event_Management_and_Ticketing_System.Models.Inquiry
@{
    ViewData["Title"] = "Contact Us";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="fas fa-envelope me-2"></i>Contact Us
                </h3>
            </div>
            <div class="card-body">
                <p class="lead">Have a question or need assistance? Send us a message!</p>
                <p class="text-muted">
                    Whether you're a guest or a member, we're here to help. Fill out the form below
                    and our team will get back to you as soon as possible.
                </p>

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-user me-1"></i>Your Name
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="fas fa-envelope me-1"></i>Your Email
                        </label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Message" class="form-label">
                            <i class="fas fa-comment me-1"></i>Your Message
                        </label>
                        <textarea asp-for="Message" class="form-control" rows="6" placeholder="Tell us how we can help you..."></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                        <small class="form-text text-muted">Maximum 1000 characters</small>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        We typically respond within 24-48 hours during business days.
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-paper-plane me-2"></i>Send Message
                        </button>
                    </div>
                </form>

                <hr class="my-4">

                <div class="row">
                    <div class="col-md-6">
                        <h5>
                            <i class="fas fa-map-marker-alt me-2 text-primary"></i>Visit Us
                        </h5>
                        <p>
                            Metropolitan Cultural Council<br />
                            123 Cultural Avenue<br />
                            City Center, ST 12345
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5>
                            <i class="fas fa-phone me-2 text-primary"></i>Call Us
                        </h5>
                        <p>
                            Phone: (555) 123-4567<br />
                            Email: info@culturalcouncil.org<br />
                            Hours: Mon-Fri, 9AM-5PM
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

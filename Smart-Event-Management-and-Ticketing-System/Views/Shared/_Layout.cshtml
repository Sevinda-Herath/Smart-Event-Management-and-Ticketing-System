<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Event Management</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Smart_Event_Management_and_Ticketing_System.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-calendar-alt me-2"></i>Metropolitan Cultural Council
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        @if (ViewBag.IsAdmin != true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Events" asp-action="Index">
                                    <i class="fas fa-calendar-check me-1"></i>Browse Events
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Inquiries" asp-action="Create">
                                    <i class="fas fa-envelope me-1"></i>Contact Us
                                </a>
                            </li>
                        }
                        @if (ViewBag.IsLoggedIn == true && ViewBag.IsAdmin != true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Bookings" asp-action="Index">
                                    <i class="fas fa-ticket-alt me-1"></i>My Bookings
                                </a>
                            </li>
                        }
                        @if (ViewBag.IsAdmin == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">
                                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Events">
                                    <i class="fas fa-calendar-alt me-1"></i>Manage Events
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Bookings">
                                    <i class="fas fa-ticket-alt me-1"></i>All Bookings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Members">
                                    <i class="fas fa-users me-1"></i>Members
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Inquiries">
                                    <i class="fas fa-envelope me-1"></i>Inquiries
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (ViewBag.IsLoggedIn == true)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white">
                                    <i class="fas fa-user me-1"></i>@ViewBag.MemberName
                                    @if (ViewBag.IsAdmin == true)
                                    {
                                        <span class="badge bg-warning text-dark ms-1">ADMIN</span>
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">
                                    <i class="fas fa-sign-out-alt me-1"></i>Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container flex-fill">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light mt-auto">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    <h5>Metropolitan Cultural Council</h5>
                    <p>Bringing culture to the community since 1995</p>
                </div>
                <div class="col-md-6 text-end">
                    &copy; 2026 - Metropolitan Cultural Council - <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

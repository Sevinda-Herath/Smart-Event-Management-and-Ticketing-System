@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="fas fa-sign-in-alt me-2"></i>Member Login
                </h3>
            </div>
            <div class="card-body">
                <p class="text-muted">Login to book tickets and manage your bookings</p>
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                    <div class="form-group mb-3">
                        <label for="email" class="form-label">
                            <i class="fas fa-envelope me-1"></i>Email
                        </label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required />
                    </div>

                    <div class="form-group mb-3">
                        <label for="password" class="form-label">
                            <i class="fas fa-lock me-1"></i>Password
                        </label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required />
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </button>
                    </div>
                </form>

                <hr class="my-4">
                
                <p class="text-center mb-0">
                    Don't have an account? 
                    <a asp-action="Register" class="text-decoration-none">
                        <i class="fas fa-user-plus me-1"></i>Register here
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

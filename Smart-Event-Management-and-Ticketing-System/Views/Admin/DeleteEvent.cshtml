@model Smart_Event_Management_and_Ticketing_System.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<div class="row mb-4">
    <div class="col-md-12">
        <a asp-action="Events" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Events
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Event
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h5>
                        <i class="fas fa-exclamation-circle me-2"></i>Are you sure you want to delete this event?
                    </h5>
                    <p class="mb-0">
                        This action will permanently delete the event along with all associated bookings and reviews. 
                        This action cannot be undone.
                    </p>
                </div>

                <h5>Event Information:</h5>
                <dl class="row">
                    <dt class="col-sm-4">Event ID:</dt>
                    <dd class="col-sm-8">@Model.EventId</dd>

                    <dt class="col-sm-4">Event Name:</dt>
                    <dd class="col-sm-8"><strong>@Model.EventName</strong></dd>

                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8"><span class="badge bg-primary">@Model.Category</span></dd>

                    <dt class="col-sm-4">Date:</dt>
                    <dd class="col-sm-8">@Model.EventDate.ToString("MMMM dd, yyyy - hh:mm tt")</dd>

                    <dt class="col-sm-4">Venue:</dt>
                    <dd class="col-sm-8">@Model.Venue</dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-4">Total Seats:</dt>
                    <dd class="col-sm-8">@Model.TotalSeats</dd>

                    <dt class="col-sm-4">Bookings:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@(Model.Bookings?.Count ?? 0) booking(s)</span>
                    </dd>

                    <dt class="col-sm-4">Reviews:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-warning">@(Model.Reviews?.Count ?? 0) review(s)</span>
                    </dd>
                </dl>

                @if ((Model.Bookings?.Count ?? 0) > 0)
                {
                    <div class="alert alert-danger">
                        <strong>Warning:</strong> This event has @Model.Bookings.Count booking(s). 
                        Deleting this event will also delete all associated bookings!
                    </div>
                }

                <form asp-action="DeleteEvent" method="post">
                    <input type="hidden" asp-for="EventId" />
                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash-alt me-2"></i>Yes, Delete This Event
                        </button>
                        <a asp-action="Events" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>No, Keep This Event
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

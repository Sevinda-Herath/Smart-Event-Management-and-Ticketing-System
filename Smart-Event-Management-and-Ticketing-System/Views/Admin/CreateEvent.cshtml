@model Smart_Event_Management_and_Ticketing_System.Models.Event
@{
    ViewData["Title"] = "Create Event";
}

<div class="row mb-4">
    <div class="col-md-12">
        <a asp-action="Events" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Events
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Create New Event
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateEvent" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="EventName" class="form-label">
                            <i class="fas fa-heading me-1"></i>Event Name
                        </label>
                        <input asp-for="EventName" class="form-control" placeholder="e.g., Summer Music Festival" />
                        <span asp-validation-for="EventName" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Category" class="form-label">
                                    <i class="fas fa-tag me-1"></i>Category
                                </label>
                                <select asp-for="Category" class="form-control">
                                    <option value="">Select Category</option>
                                    <option value="Music">Music</option>
                                    <option value="Theater">Theater</option>
                                    <option value="Dance">Dance</option>
                                    <option value="Art">Art</option>
                                    <option value="Workshop">Workshop</option>
                                    <option value="Festival">Festival</option>
                                    <option value="Conference">Conference</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="EventDate" class="form-label">
                                    <i class="fas fa-calendar me-1"></i>Event Date & Time
                                </label>
                                <input asp-for="EventDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="EventDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Venue" class="form-label">
                            <i class="fas fa-map-marker-alt me-1"></i>Venue
                        </label>
                        <input asp-for="Venue" class="form-control" placeholder="e.g., City Concert Hall" />
                        <span asp-validation-for="Venue" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="Price" class="form-label">
                                    <i class="fas fa-dollar-sign me-1"></i>Ticket Price
                                </label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="e.g., 45.00" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="TotalSeats" class="form-label">
                                    <i class="fas fa-chair me-1"></i>Total Seats
                                </label>
                                <input asp-for="TotalSeats" type="number" class="form-control" placeholder="e.g., 500" />
                                <span asp-validation-for="TotalSeats" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label">
                            <i class="fas fa-info-circle me-1"></i>Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4" 
                                  placeholder="Enter a detailed description of the event..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Create Event
                        </button>
                        <a asp-action="Events" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

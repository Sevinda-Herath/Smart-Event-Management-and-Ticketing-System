@model List<Smart_Event_Management_and_Ticketing_System.Models.Event>
@{
    ViewData["Title"] = "Manage Events";
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>
                    <i class="fas fa-calendar-alt me-2"></i>Manage Events
                </h2>
                <p class="text-muted">Create, edit, and delete events</p>
            </div>
            <a asp-action="CreateEvent" class="btn btn-primary btn-lg">
                <i class="fas fa-plus-circle me-2"></i>Create New Event
            </a>
        </div>
    </div>
</div>

<!-- Events Table -->
<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>All Events (@Model.Count)
        </h5>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Event Name</th>
                            <th>Category</th>
                            <th>Date</th>
                            <th>Venue</th>
                            <th>Price</th>
                            <th>Seats</th>
                            <th>Bookings</th>
                            <th>Reviews</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var evt in Model)
                        {
                            <tr>
                                <td><strong>@evt.EventId</strong></td>
                                <td>@evt.EventName</td>
                                <td><span class="badge bg-primary">@evt.Category</span></td>
                                <td>@evt.EventDate.ToString("MMM dd, yyyy")</td>
                                <td>@evt.Venue</td>
                                <td>@evt.Price.ToString("C")</td>
                                <td>
                                    @if (evt.IsFull)
                                    {
                                        <span class="badge bg-danger">FULL</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@evt.AvailableSeats / @evt.TotalSeats</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@(evt.Bookings?.Count ?? 0)</span>
                                </td>
                                <td>
                                    <span class="badge bg-warning">@(evt.Reviews?.Count ?? 0)</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="Events" asp-action="Details" asp-route-id="@evt.EventId" 
                                           class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="EditEvent" asp-route-id="@evt.EventId" 
                                           class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="DeleteEvent" asp-route-id="@evt.EventId" 
                                           class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>No events found. Create your first event!
            </div>
        }
    </div>
</div>

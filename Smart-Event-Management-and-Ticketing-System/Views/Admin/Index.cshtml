@model List<Smart_Event_Management_and_Ticketing_System.Models.Event>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h2>
            <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
        </h2>
        <p class="text-muted">Welcome to the admin control panel</p>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card bg-primary text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-white-50 mb-0">Total Events</h6>
                        <h2 class="mb-0">@ViewBag.TotalEvents</h2>
                    </div>
                    <i class="fas fa-calendar-alt fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-primary-dark">
                <a asp-action="Events" class="text-white text-decoration-none">
                    View All <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-success text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-white-50 mb-0">Total Bookings</h6>
                        <h2 class="mb-0">@ViewBag.TotalBookings</h2>
                    </div>
                    <i class="fas fa-ticket-alt fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-success-dark">
                <a asp-action="Bookings" class="text-white text-decoration-none">
                    View All <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-info text-white shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-white-50 mb-0">Total Members</h6>
                        <h2 class="mb-0">@ViewBag.TotalMembers</h2>
                    </div>
                    <i class="fas fa-users fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-info-dark">
                <a asp-action="Members" class="text-white text-decoration-none">
                    View All <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card bg-warning text-dark shadow">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-dark-50 mb-0">Inquiries</h6>
                        <h2 class="mb-0">@ViewBag.TotalInquiries</h2>
                    </div>
                    <i class="fas fa-envelope fa-3x opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-warning-dark">
                <a asp-action="Inquiries" class="text-dark text-decoration-none">
                    View All <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-2">
                        <a asp-action="CreateEvent" class="btn btn-primary w-100 btn-lg">
                            <i class="fas fa-plus-circle me-2"></i>Create New Event
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-action="Events" class="btn btn-info w-100 btn-lg">
                            <i class="fas fa-calendar-alt me-2"></i>Manage Events
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-action="Bookings" class="btn btn-success w-100 btn-lg">
                            <i class="fas fa-ticket-alt me-2"></i>View Bookings
                        </a>
                    </div>
                    <div class="col-md-3 mb-2">
                        <a asp-action="Inquiries" class="btn btn-warning w-100 btn-lg">
                            <i class="fas fa-envelope me-2"></i>View Inquiries
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Upcoming Events -->
<div class="row">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-calendar-check me-2"></i>Upcoming Events
                </h5>
            </div>
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Event Name</th>
                                    <th>Category</th>
                                    <th>Date</th>
                                    <th>Venue</th>
                                    <th>Price</th>
                                    <th>Bookings</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var evt in Model)
                                {
                                    <tr>
                                        <td><strong>@evt.EventName</strong></td>
                                        <td><span class="badge bg-primary">@evt.Category</span></td>
                                        <td>@evt.EventDate.ToString("MMM dd, yyyy")</td>
                                        <td>@evt.Venue</td>
                                        <td>@evt.Price.ToString("C")</td>
                                        <td>
                                            <span class="badge bg-success">@evt.BookedSeats / @evt.TotalSeats</span>
                                        </td>
                                        <td>
                                            <a asp-action="EditEvent" asp-route-id="@evt.EventId" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="DeleteEvent" asp-route-id="@evt.EventId" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">No upcoming events.</p>
                }
            </div>
        </div>
    </div>
</div>

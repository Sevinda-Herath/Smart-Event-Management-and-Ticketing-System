@model Smart_Event_Management_and_Ticketing_System.Models.Event
@{
    ViewData["Title"] = "Event Details";
}

<div class="row mb-4">
    <div class="col-md-12">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Events
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>@Model.EventName
                </h3>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <p>
                            <strong><i class="fas fa-tag me-2 text-primary"></i>Category:</strong><br />
                            <span class="badge bg-primary">@Model.Category</span>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p>
                            <strong><i class="fas fa-calendar me-2 text-primary"></i>Date & Time:</strong><br />
                            @Model.EventDate.ToString("dddd, MMMM dd, yyyy")<br />
                            @Model.EventDate.ToString("hh:mm tt")
                        </p>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <p>
                            <strong><i class="fas fa-map-marker-alt me-2 text-primary"></i>Venue:</strong><br />
                            @Model.Venue
                        </p>
                    </div>
                    @if (ViewBag.IsLoggedIn == true)
                    {
                        <div class="col-md-6">
                            <p>
                                <strong><i class="fas fa-dollar-sign me-2 text-primary"></i>Price:</strong><br />
                                <span class="h4 text-success">@Model.Price.ToString("C")</span>
                            </p>
                        </div>
                    }
                </div>

                @if (ViewBag.IsLoggedIn == true)
                {
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <p>
                                <strong><i class="fas fa-chair me-2 text-primary"></i>Availability:</strong><br />
                                @if (Model.IsFull)
                                {
                                    <span class="badge bg-danger fs-6">FULLY BOOKED</span>
                                }
                                else
                                {
                                    <span class="badge bg-success fs-6">@Model.AvailableSeats seats available out of @Model.TotalSeats</span>
                                }
                            </p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Guest View:</strong> Register or login to see full pricing and availability details.
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr />
                    <h5>
                        <i class="fas fa-info-circle me-2"></i>Description
                    </h5>
                    <p>@Model.Description</p>
                }

                @if (ViewBag.IsLoggedIn == true)
                {
                    <hr />
                    @if (!Model.IsFull)
                    {
                        <a asp-controller="Bookings" asp-action="Create" asp-route-eventId="@Model.EventId" class="btn btn-success btn-lg">
                            <i class="fas fa-ticket-alt me-2"></i>Book Tickets
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg" disabled>
                            <i class="fas fa-times-circle me-2"></i>Event Fully Booked
                        </button>
                    }

                    @if (ViewBag.HasBooked == true && ViewBag.HasReviewed != true)
                    {
                        <a asp-controller="Reviews" asp-action="Create" asp-route-eventId="@Model.EventId" class="btn btn-primary btn-lg ms-2">
                            <i class="fas fa-star me-2"></i>Write a Review
                        </a>
                    }
                }
                else
                {
                    <hr />
                    <div class="alert alert-info">
                        <i class="fas fa-lock me-2"></i>
                        <a asp-controller="Account" asp-action="Register" class="alert-link">Register</a> or 
                        <a asp-controller="Account" asp-action="Login" class="alert-link">Login</a> to book tickets for this event.
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Reviews Section -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-star me-2"></i>Reviews (@ViewBag.TotalReviews)
                </h5>
                @if (ViewBag.AverageRating != null)
                {
                    <small>Average Rating: @ViewBag.AverageRating.ToString("0.0") <i class="fas fa-star"></i></small>
                }
            </div>
            
            <!-- Review Filter Section -->
            <div class="card-body bg-light border-bottom">
                <form asp-action="Details" asp-route-id="@Model.EventId" method="get">
                    <div class="mb-2">
                        <label for="starFilter" class="form-label small mb-1">
                            <i class="fas fa-filter me-1"></i>Filter by Stars
                        </label>
                        <select name="starFilter" id="starFilter" class="form-select form-select-sm">
                            <option value="">All Ratings</option>
                            <option value="5" selected="@(ViewBag.StarFilter == 5)">5 Stars</option>
                            <option value="4" selected="@(ViewBag.StarFilter == 4)">4 Stars</option>
                            <option value="3" selected="@(ViewBag.StarFilter == 3)">3 Stars</option>
                            <option value="2" selected="@(ViewBag.StarFilter == 2)">2 Stars</option>
                            <option value="1" selected="@(ViewBag.StarFilter == 1)">1 Star</option>
                        </select>
                    </div>
                    <div class="mb-2">
                        <label for="reviewKeyword" class="form-label small mb-1">
                            <i class="fas fa-search me-1"></i>Search Reviews
                        </label>
                        <input type="text" name="reviewKeyword" id="reviewKeyword" class="form-control form-control-sm" 
                               placeholder="Search by keyword or name" value="@ViewBag.ReviewKeyword" />
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-filter me-1"></i>Filter
                        </button>
                        @if (ViewBag.StarFilter != null || ViewBag.ReviewKeyword != null)
                        {
                            <a asp-action="Details" asp-route-id="@Model.EventId" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-times me-1"></i>Clear Filters
                            </a>
                        }
                    </div>
                </form>
            </div>

            <!-- Filtered Review Count -->
            @if (ViewBag.StarFilter != null || ViewBag.ReviewKeyword != null)
            {
                <div class="card-body bg-warning bg-opacity-25 py-2 border-bottom">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        Showing @ViewBag.FilteredReviewCount of @ViewBag.TotalReviews reviews
                    </small>
                </div>
            }

            <!-- Reviews List -->
            <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                @if (ViewBag.FilteredReviews != null && ViewBag.FilteredReviews.Count > 0)
                {
                    var currentMemberId = ViewBag.IsLoggedIn == true ? Smart_Event_Management_and_Ticketing_System.Helpers.SessionHelper.GetMemberId(Context.Session) : null;
                    
                    foreach (var review in ViewBag.FilteredReviews)
                    {
                        <div class="mb-3 pb-3 border-bottom">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <strong>@review.Member?.FullName</strong>
                                    @if (currentMemberId.HasValue && review.MemberId == currentMemberId.Value)
                                    {
                                        <span class="badge bg-primary ms-1">You</span>
                                    }
                                    <div>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-warning"></i>
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted d-block">@review.ReviewDate.ToString("MMM dd, yyyy")</small>
                                    @if (currentMemberId.HasValue && review.MemberId == currentMemberId.Value)
                                    {
                                        <div class="btn-group btn-group-sm mt-1" role="group">
                                            <a asp-controller="Reviews" asp-action="Edit" asp-route-id="@review.ReviewId" 
                                               class="btn btn-sm btn-outline-primary" title="Edit your review">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-controller="Reviews" asp-action="Delete" asp-route-id="@review.ReviewId" 
                                               class="btn btn-sm btn-outline-danger" title="Delete your review">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                            <p class="mt-2 mb-0">@review.Comment</p>
                        </div>
                    }
                }
                else if (ViewBag.StarFilter != null || ViewBag.ReviewKeyword != null)
                {
                    <p class="text-muted">
                        <i class="fas fa-search me-2"></i>No reviews match your filter criteria.
                    </p>
                }
                else if (Model.Reviews == null || !Model.Reviews.Any())
                {
                    <p class="text-muted">
                        <i class="fas fa-info-circle me-2"></i>No reviews yet. Be the first to review this event!
                    </p>
                }
            </div>
        </div>
    </div>
</div>
